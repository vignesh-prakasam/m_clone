<div class="row">
  <div class="large-12 columns">
    <div class="panel">
      <h1 class="text-center">APIs</h1>
    </div>
  </div>
</div>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Emails</th>
      <th>Enable notification</th>
      <th>Expected response</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apis.each do |api| %>
      <tr>
        <td><%= api.name %></td>
        <td><%= api.url %></td>
        <td><%= api.emails %></td>
        <td><%= api.enable_notification %></td>
        <td><%= api.expected_response %></td>
        <td><%= link_to 'Show', api , :class => 'button success tiny radius'  %></td>
        <td><%= link_to 'Edit', edit_api_path(api) %></td>
        <td><%= link_to 'Destroy', api, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Api', new_api_path %>
